<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/FrameLayout01"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rfid_background"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="用户部分："
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/open_wire"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/wire" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/openwire"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/close_wire"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/wire" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/closewire"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/find_card"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/search" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/findcard"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/find_ret"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ems="10"
                android:focusable="false"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/fix_card"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/fix" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/fixcard"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/fix_ret"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:focusable="false"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/prevent_conflit"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/conflit" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/preventconflit"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/prevent_ret"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ems="10"
                android:focusable="false"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/verity_pass"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/password" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/veritypassword"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/pass_ret"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:hint="@string/password"
                android:maxLength="12"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/verity_ret"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#ff0000"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/read_balance"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="#ffffff"
                android:text="@string/readbalan"
                android:textColor="#0000ff"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/read_ret"
                android:layout_width="420dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:focusable="false"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="管理员部分："
                android:textSize="30sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="(需先操作用户部分功能才能进行管理员部分的操作)"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/init_balance"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="#ffffff"
                android:text="@string/initword"
                android:textColor="#0000ff"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/init_money"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:hint="@string/init"
                android:inputType="numberDecimal"
                android:maxLength="8"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/init_ret"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#ff0000"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/deduct_balance"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="#ffffff"
                android:text="@string/deductword"
                android:textColor="#0000ff"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/deduct_money"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/deduction"
                android:inputType="numberDecimal"
                android:maxLength="8"
                android:textSize="20sp" />

            <Button
                android:id="@+id/add_balance"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="50dp"
                android:background="#ffffff"
                android:text="@string/addword"
                android:textColor="#0000ff"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/add_money"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/addhint"
                android:inputType="numberDecimal"
                android:maxLength="8"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/deduct_ret"
                android:layout_width="450dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#ff0000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/add_ret"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#ff0000"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="80dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/readsec_id"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="@string/secidtext"
                android:inputType="number"
                android:maxLength="2" />

            <Button
                android:id="@+id/read_sec"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="#ffffff"
                android:text="@string/readsec"
                android:textColor="#0000ff"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/readsec_ret"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:focusable="false"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/writesec_id"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="@string/secidtext"
                android:inputType="number"
                android:maxLength="2" />

            <Button
                android:id="@+id/write_sec"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="#ffffff"
                android:text="@string/writesec"
                android:textColor="#0000ff"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/writesec_data"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:hint="@string/writehint"
                android:inputType="number"
                android:maxLength="32"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/write_ret"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff0000" />
        </LinearLayout>

