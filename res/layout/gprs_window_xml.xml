<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal" >
    
    <LinearLayout 
        android:layout_marginTop="50dp"
        android:id="@+id/gprs_version_linearly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">
		<TextView 
	        android:id="@+id/gprs_version_info_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="25sp"
	        android:text="版本信息："/>
	    <TextView 
	        android:id="@+id/gprs_version_data_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="25sp"
	        android:text=""/>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/gprs_time_linearly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">
        <TextView 
            android:id="@+id/gprs_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="GPS时间："/>
        <TextView 
            android:id="@+id/gprs_time_data_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text=""/>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/gprs_longitude_linearly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">
        <TextView 
            android:id="@+id/gprs_longitude_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="经度："/>
        <TextView 
            android:id="@+id/gprs_longitude_data_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text=""/>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/gprs_latitude_linearly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">
        <TextView 
            android:id="@+id/gprs_latitude_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="纬度："/>
        <TextView 
            android:id="@+id/gprs_latitude_data_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text=""/>
    </LinearLayout>
    
</LinearLayout>




