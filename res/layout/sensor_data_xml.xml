<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    <ImageView 
        android:id="@+id/sensor_img_iv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>
	<LinearLayout 
	    android:id="@+id/sensor_data_linearly"
	    android:orientation="vertical"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal">
	    <TextView 
	        android:id="@+id/sensor_type_tv"
	        android:layout_width="300dp"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        android:textColor="@android:color/holo_red_light"
	        android:text=""/>
	    <TextView 
	        android:id="@+id/sensor_data_tv"
	        android:layout_width="300dp"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        android:text="28℃/100%"/>
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/sensor_addr_linearly"
	    android:orientation="vertical"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="100dp"
	    android:layout_gravity="center_horizontal">
	    <TextView 
	        android:id="@+id/sensor_addr_tv"
	        android:layout_width="200dp"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        android:textColor="@android:color/holo_red_light"
	        android:text="节点地址"/>
	    <TextView 
	        android:id="@+id/sensor_addr_data_tv"
	        android:layout_width="200dp"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        android:text="10"/>
	</LinearLayout>
</LinearLayout>
